{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 1
    },
    "configurePresets": [
        {
            "name": "debug",
            "hidden": false,
            "description": "Debug build for unix-like systems",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
            }
        },
        {
            "name": "debug-win",
            "hidden": false,
            "description": "Debug build for Windows",
            "generator": "Ninja",
            "inherits": "debug",
            "binaryDir": "${sourceDir}/build/debug-win",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "x86_64-w64-mingw32-gcc",
                "CMAKE_CXX_COMPILER": "x86_64-w64-mingw32-g++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
            }
        },
        {
            "name": "release",
            "hidden": false,
            "inherits": "debug",
            "description": "Release build for unix-like systems",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
            }
        },
        {
            "name": "release-win",
            "hidden": false,
            "description": "Release build for Windows",
            "inherits": "debug-win",
            "binaryDir": "${sourceDir}/build/release-win"
        }
    ]
}